{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for character in characters %}
                <div class="col-md-4">
                    <a href="/character/{{ character.id }}">
                    <img src={{ character.thumbnail }} class="img-thumbnail">
                    <h3 class="title">{{ character.name }}</h3>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
