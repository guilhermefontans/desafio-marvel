{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {% if  character.thumbnail %}
                    <img src={{ character.thumbnail.fullpath }} class="img-thumbnail">
                {% else %}
                    <img src="images/image-not-available.jpg" class="img-thumbnail">
                {% endif %}
                <h3 class="title">{{ character.name }}</h3>
                {% if  character.description %}
                <h5 class="title">{{ character.description }}</h5>
                {% else %}
                <h5 class="title">No description found</h5>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}